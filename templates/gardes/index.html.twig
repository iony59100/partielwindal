{% extends 'base.html.twig' %}

{% block title %}Gardes index{% endblock %}

{% block body %}
    <h1>Gardes index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for garde in gardes %}
            <tr>
                <td>{{ garde.id }}</td>
                <td>{{ garde.date ? garde.date|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('app_gardes_show', {'id': garde.id}) }}">show</a>
                    <a href="{{ path('app_gardes_edit', {'id': garde.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_gardes_new') }}">Create new</a>
{% endblock %}
